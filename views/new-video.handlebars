<div class="row mt-3">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12 mb-5">
                <h1>New Video</h1>
                <hr>
                <form action="/my-videos/new" method="POST" enctype="multipart/form-data">
                    <div class="custom-file mb-4">
                        <input type="file" name="video" class="custom-file-input" id="videoupload" accept="video/mp4">
                        <label class="custom-file-label" for="customFile">Choose a video</label>
                        {{#if errors.video}}
                        <div class="text-danger">
                            {{#each errors.video}}
                            <span class="d-block">{{message}}</span>
                            {{/each}}
                        </div>
                        {{/if}}
                    </div>
                    <div class="custom-file mb-3">
                        <input type="file" name="thumbnail" class="custom-file-input" id="thumbnailupload" accept="image/*">
                        <label class="custom-file-label" for="customFile">Choose a Thumbnail</label>
                        {{#if errors.thumbnail}}
                        <div class="text-danger">
                            {{#each errors.thumbnail}}
                            <span class="d-block">{{message}}</span>
                            {{/each}}
                        </div>
                        {{/if}}
                    </div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" value="{{form.title}}" name="title" id="title" class="form-control"> {{#if errors.title}}
                        <div class="text-danger">
                            {{#each errors.title}}
                            <span class="d-block">{{message}}</span>
                            {{/each}}
                        </div>
                        {{/if}}
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" cols="30" rows="7" class="form-control">{{form.description}}</textarea>                        {{#if
                        errors.description}}
                        <div class="text-danger">
                            {{#each errors.description}}
                            <span class="d-block">{{message}}</span>
                            {{/each}}
                        </div>
                        {{/if}}
                    </div>
                    <button type="submit" class="btn btn-success">Upload Video</button>
                </form>
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12">
                <h1>Preview</h1>
                <hr>
                <div id="video-preview" class="mb-3">
                    <video height="305" controls>
                        <source id="video-src" src="" type="video/mp4"> Your browser does not support the video tag.
                    </video>
                </div>
                <div class="card p-10" id="home-preview">
                    <div class="card-body d-flex align-items-center">
                        <img class="img-responsive" id="thumbnail" src="" alt="preview" width="150">
                        <div class="ml-3">
                            <h5 class="card-title" id="preview-title">
                                {{#if form.title}} {{form.title}} {{else}} Title {{/if}}
                            </h5>
                            <h6 class="card-subtitle mb-3 text-muted">By <a href="#">User</a></h6>
                            <h6 class="card-subtitle text-muted">Uploaded on DD/MM/YYY</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>